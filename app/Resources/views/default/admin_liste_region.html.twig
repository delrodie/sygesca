{% extends 'base.html.twig' %}

{% block title %}Liste des districts des différentes régions{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('ressources/plugins/datatables/media/css/dataTables.bootstrap.css')}}" rel="stylesheet">
<link href="{{ asset('ressources/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}
  <div class="pageheader">
    <h5>
      <i class="fa fa-home"></i>Liste des districts des différentes régions</h5>
    <div class="breadcrumb-wrapper">
      <span class="label"></span>
      <ol class="breadcrumb">
        <li><a href="#">Accueil</a></li>
        <li><a href="#">Gestions</a></li>
        <li class="active">Districts</li>
      </ol>
    </div>
  </div>
  <div id="page-content">
    <br>
      <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
          {% if flash_message %}
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
              <div class="alert alert-info media fade in">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                <div class="media-left">
                  <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                    <i class="fa fa-check fa-lg"></i>
                  </span>
                </div>
                <div class="media-body">
                  <p></p>
                    <h4 class="alert-title" style="color: green">
                      {{ flash_message }}
                    </h4>
                </div>
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}
        <!-- \Message -->
        {% if (is_granted('ROLE_ADMIN')) %}
        <br>
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <a href="{{ path('admin_user_new')}}" title="">
              <button class="btn btn-default btn-labeled fa fa-user-plus">Ajouter un nouveau district</button>
            </a>
          </div>
        </div>
        <br>
        {% endif %}

    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Liste des districts</h3>
      </div>
      <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">#</th>
              <th class="text-center mini-desktop">Régions</th>
              <th class="text-center">Districts</th>
              <th class="text-center mini-desktop"></th>
            </tr>
          </thead>
          <tbody>
            {% for region in regions %}
                <tr>
                    <td class="text-right">{{ loop.index }}</td>
                    <td>{{ region.nom|upper }} (<strong>{{ region.code }}</strong>)</td>
                    <td>
                      {{ render(url('district_admin_liste', {'id': region.id }))}}
                    </td>
                    <td class="text-center">
                      {% if (is_granted('ROLE_ADMIN')) %}
                      <a href="{{ path('district_admin_ajout', {'id': region.id })}}" class="btn-link add-tooltip" data-placement="left" data-toggle="tooltip" data-original-title="Ajouter un nouveau district">
                        <i class="fa fa-plus"></i>
                      </a> |
                      {% endif %}
                      <a href="#" class="btn-link add-tooltip" data-placement="left" data-toggle="tooltip" data-original-title="Voir les groupes des districts">
                        <i class="fa fa-search"></i>
                      </a>
                    </td>
                </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

  </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/plugins/datatables/media/js/jquery.dataTables.js')}}"></script>
<script src="{{ asset('ressources/plugins/datatables/media/js/dataTables.bootstrap.js')}}"></script>
<script src="{{ asset('ressources/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js')}}"></script>
<script src="{{ asset('ressources/js/demo/tables-datatables.js')}}"></script>
{% endblock %}
