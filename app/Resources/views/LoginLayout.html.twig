<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {% block title %}Connexion a la plateforme{% endblock %}
    </title>
    <meta name="Author" content="Eden'Art, Delrodie AMOIKON">
    <link rel="shortcut icon" href="{{ asset('ressources/img/logo.png')}}">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400,700|Roboto:300,400,700" rel="stylesheet">
    <link href="{{ asset('ressources/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/css/style.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/switchery/switchery.min.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/bootstrap-select/bootstrap-select.min.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/css/demo/jasmine.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/pace/pace.min.css')}}" rel="stylesheet">
    <script src="{{ asset('ressources/plugins/pace/pace.min.js')}}"></script>
  </head>
  <body>
    <div id="container" class="cls-container">
      <div class="lock-wrapper">
        <div class="panel lock-box">
          <div class="center">
            <img alt="" src="{{ asset('ressources/img/avatar.png')}}" class="img-circle"/>
          </div>
          <h4>Bienvenue</h4>
          <div>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                  {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                  <a href="{{ path('fos_user_security_logout') }}">
                      {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                  </a>
              {% else %}
                  <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
              {% endif %}
          </div>
          {% if app.request.hasPreviousSession %}
              {% for type, messages in app.session.flashbag.all() %}
                  {% for message in messages %}
                      <div class="flash-{{ type }}">
                        {{ message }}
                      </div>
                  {% endfor %}
              {% endfor %}
          {% endif %}
          <div>
              {% block fos_user_content %}
              {% endblock fos_user_content %}
          </div>
        </div>
        <!--<div class="registration">
          Vous avez oublié votre mot de passe
          <a href="#/pages/signup">
            <span class="text-primary">
              Réinitialiser
            </span>
          </a>
        </div>-->
      </div>
    </div>

    <script src="{{ asset('ressources/js/jquery-2.1.1.min.js')}}"></script>
    <script src="{{ asset('ressources/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('ressources/plugins/fast-click/fastclick.min.js')}}"></script>
    <script src="{{ asset('ressources/js/scripts.js')}}"></script>
    <script src="{{ asset('ressources/plugins/switchery/switchery.min.js')}}"></script>
    <script src="{{ asset('ressources/plugins/bootstrap-select/bootstrap-select.min.js')}}"></script>
  </body>
</html>
