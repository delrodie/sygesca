<script src="{{ asset('ressources/plugins/morris-js/raphael-js/raphael.min.js')}}"></script>

<script>
  $(document).ready(function() {
      var donnees = [
          {% for district in districts %}
            { y: "{{ district.nom }}", a: {{ render(url('statistiques_district_total_cotisant', {'district': district.id}))}} },
          {% endfor %}
      ];
      Morris.Bar({
          element: "histogramme-district",
          data: donnees,
          xkey: "y",
          ykeys: ["a"],
          labels: ["Cotisants"],
          gridEnabled: !0,
          barColors: ["#29b7d3"],
          resize: !0,
          hideHover: "auto"
      })
  });
</script>
