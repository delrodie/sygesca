.bordereau-liste td { padding-top: 3px; padding-bottom: 3px; border-bottom: solid 1px #999; border-right: solid 1px #999; font-size: 12px; font-family: Arial;}
.bordereau-liste td:first-child{ border-left: solid 1px #999;}
.bordereau-liste tr:nth-of-type(an+2) td{ background-color: #ccc;}
</style>
<page backtop="30mm" backbottom="15mm" backleft="5mm" backright="5mm">
  <page_header>
    <table style="width: 100%;">
      <tr>
        <td style="text-align:left; width: 60%;" class="bordereau-entete">
          <img src="ressources/img/logo.png" alt="">
          <div class="ascci">
            Association des Scouts Catholiques de Côte d'Ivoire
          </div>
          <div class="contact">
            01 BP 959 ABIDJAN 01 -
            <strong>Tél</strong> : 20-22-35-22 - <strong>Fax</strong> : 20-21-03-35 -
            <strong>Email</strong> : assciinter@yahoo.fr
          </div>
        </td>
        <td style="text-align:right; width: 31%">
          Bordereau N°: <strong>B1617-001</strong><br><br>
          Année : <strong>2016-2017</strong>
        </td>
      </tr>
    </table>
  </page_header>
  <page_footer>
      <table style="width: 100%;">
          <tr>
              <td style="text-align: left; width: 33%">Région: <strong>ABIDJAN</strong></td>
              <td style="text-align: center; width: 33%">[[page_cu]]/[[page_nb]]</td>
              <td style="text-align: right; width: 33%"><span class="poweredBy">SYGESCA v1.0</span></td>
          </tr>
      </table>
  </page_footer>

  <table cellpadding="0" cellspacing="0" style="width: 100%;" class="bordereau-liste" align="center">
    <tr style="text-align: center; text-transform: uppercase">
      <th style="width: 3%">#</th>
      <th style="width: 8%">Numeros</th>
      <th style="width: 8%">Matricules</th>
      <th style="width: 45%">Noms & prenoms</th>
      <th style="width: 5%">Sexes</th>
      <th style="width: 11%">Date naissance</th>
      <th style="width: 12%">Fonctions</th>
      <th style="width: 8%">Montants</th>
    </tr>
    {% set mt = 0 %}{% set total = 0 %}
    {% for i in 1..134 %}
      {% if (loop.index % 2 == 0) %}
      {% set mt = 5000 %}
      <tr style="background-color: #dcdcdc;">
        <td style="text-align: right; padding-right: 3px">{{ loop.index }}</td>
        <td style="text-align: center">05-0001-17</td>
        <td style="text-align: center">056325M</td>
        <td style="padding-left: 5px;">AMOIKON Kanga Dieudonné</td>
        <td style="text-align: center">M</td>
        <td style="text-align: center">02-12-1987</td>
        <td style="padding-left: 5px;">Equipe Régionale</td>
        <td style="text-align: right; padding-right: 7px">{{ mt|number_format('0','','.')}}</td>
      </tr>
      {% else %}
      {% set mt = 2500 %}
      <tr>
        <td style="text-align: right; padding-right: 3px">{{ loop.index }}</td>
        <td style="text-align: center">05-0002-17</td>
        <td style="text-align: center">056325M</td>
        <td style="padding-left: 5px;">DONGO Amaurophy Amat Colombe Carmella</td>
        <td style="text-align: center">F</td>
        <td style="text-align: center">06-03-1993</td>
        <td style="padding-left: 5px;">CU</td>
        <td style="text-align: right; padding-right: 7px">{{ mt|number_format('0','','.')}}</td>
      </tr>
      {% endif %}
      {% set total = total + mt %}
    {% endfor %}
    <tr>
      <td colspan="7" style="text-align: right; padding-right: 15px; border-bottom: solid 0px #fff"><strong>TOTAL</strong></td>
      <td style="text-align: right; padding-right: 7px; font-size: 14px;"><strong>{{ total|number_format('0','','.')}}</strong></td>
    </tr>
  </table>
</page>
