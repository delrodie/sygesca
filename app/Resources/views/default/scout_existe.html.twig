{% extends 'base.html.twig' %}

{% block title %}Enregistrement des scouts{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('ressources/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
<link href="{{ asset('ressources/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}
  <div class="pageheader">
    <h3>
      <i class="fa fa-home"></i>Gestion des scouts</h3>
    <div class="breadcrumb-wrapper">
      <span class="label"></span>
      <ol class="breadcrumb">
        <li>
          <a href="#">Accueil</a>
        </li>
        <li>
          <a href="#">Gestions</a>
        </li>
        <li class="active">Scouts</li>
      </ol>
    </div>
  </div>

  <div id="page-content">

    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <a href="{{ path('scout_index')}}" title="">
          <button class="btn btn-default btn-labeled fa fa-user-plus">Liste des scouts</button>
        </a>
      </div>
    </div>
    <br>

    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Enregistrement des scouts</h3>
      </div>
      <!-- Message -->
        {% for flash_message in app.session.flashBag.get('notice') %}
          {% if flash_message %}
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
              <div class="alert alert-danger media fade in">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                <div class="media-left">
                  <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                    <i class="fa fa-exclamation-triangle fa-lg"></i>
                  </span>
                </div>
                <div class="media-body">
                  <p></p>
                    <h4 class="alert-title" style="color: red">
                      {{ flash_message|raw }}
                    </h4>
                </div>
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}
        <!-- \Message -->
      {{ form_start(form, { 'attr': {'class': 'form-vertical', 'id': 'scoutForm' }}) }}
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">Groupe  <span style="color: red">*</span></label>
                    {{ form_widget(form.groupe) }}
                    {{ form_errors(form.groupe) }}
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">Branche  <span style="color: red">*</span></label>
                    {{ form_widget(form.branche) }}
                    {{ form_errors(form.branche) }}
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">Statut  <span style="color: red">*</span></label>
                    {{ form_widget(form.statut) }}
                    {{ form_errors(form.statut) }}
                  </div>
                </div>
              </div>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Nom   <span style="color: red">*</span></label>
                      {{ form_widget(form.nom) }}
                      {{ form_errors(form.nom) }}
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Prenoms  <span style="color: red">*</span></label>
                      {{ form_widget(form.prenoms) }}
                      {{ form_errors(form.prenoms) }}
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Genre  <span style="color: red">*</span></label>
                      {{ form_widget(form.sexe) }}
                      {{ form_errors(form.sexe) }}
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Date de naissance   <span style="color: red">*</span></label>
                      {{ form_widget(form.datenaiss) }}
                      {{ form_errors(form.datenaiss) }}
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Lieu de naisse  <span style="color: red">*</span></label>
                      {{ form_widget(form.lieunaiss) }}
                      {{ form_errors(form.lieunaiss) }}
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Nationalité  <span style="color: red"></span></label>
                      {{ form_widget(form.nationalite) }}
                      {{ form_errors(form.nationalite) }}
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Contact   <span style="color: red"></span></label>
                      {{ form_widget(form.contact) }}
                      {{ form_errors(form.contact) }}
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group">
                      <label class="control-label">Email  <span style="color: red"></span></label>
                      {{ form_widget(form.email) }}
                      {{ form_errors(form.email) }}
                    </div>
                  </div>
                </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-7 col-sm-offset-3 text-right">
              {{ form_rest(form)}}
              <a href="{{ path('scout_index')}}" class="btn btn-default">Annuler</a>
              <button class="btn btn-primary">Demande de transfert</button>
            </div>
          </div>
        </div>
      {{ form_end(form)}}
    </div>

  </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
<script src="{{ asset('ressources/js/sygesca-form-validation.js')}}"></script>
{% endblock %}
